/* pages/checkin/checkin.wxss - 打卡详情页面样式 */

.container {
  background: var(--background-color);
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
}

.loading-text {
  margin-top: 12px;
  color: var(--text-secondary);
  font-size: 14px;
}

/* 习惯信息头部 */
.habit-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 20px var(--spacing);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.habit-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.habit-icon {
  width: 50px;
  height: 50px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-right: 16px;
}

.habit-details {
  flex: 1;
}

.habit-name {
  display: block;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 4px;
}

.habit-category {
  font-size: 14px;
  opacity: 0.9;
}

.habit-actions {
  margin-left: 16px;
}

.action-btn {
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 统计卡片 */
.stats-section {
  display: flex;
  padding: var(--spacing);
  gap: 12px;
}

.stat-card {
  flex: 1;
  background: var(--card-background);
  border-radius: var(--radius);
  padding: 20px 16px;
  text-align: center;
  box-shadow: var(--shadow);
}

.stat-number {
  display: block;
  font-size: 28px;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 今日打卡区域 */
.today-section {
  margin: 0 var(--spacing) var(--spacing);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.today-date {
  font-size: 14px;
  color: var(--text-secondary);
}

.month-text {
  font-size: 14px;
  color: var(--text-secondary);
}

/* 已完成打卡 */
.checkin-completed {
  display: flex;
  align-items: center;
  padding: 16px 0;
}

.completed-icon {
  font-size: 32px;
  margin-right: 16px;
}

.completed-info {
  flex: 1;
}

.completed-text {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: var(--primary-color);
  margin-bottom: 4px;
}

.completed-time {
  display: block;
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 4px;
}

.completed-note {
  display: block;
  font-size: 14px;
  color: var(--text-secondary);
  background: var(--background-color);
  padding: 8px 12px;
  border-radius: 6px;
  margin-top: 8px;
}

/* 待打卡状态 */
.checkin-pending {
  display: flex;
  align-items: center;
  padding: 16px 0;
}

.pending-icon {
  font-size: 32px;
  margin-right: 16px;
}

.pending-info {
  flex: 1;
}

.pending-text {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.pending-desc {
  font-size: 14px;
  color: var(--text-secondary);
}

/* 日历区域 */
.calendar-section {
  margin: 0 var(--spacing) var(--spacing);
}

.calendar {
  margin-top: 16px;
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 1px;
  margin-bottom: 8px;
}

.week-day {
  text-align: center;
  font-size: 12px;
  color: var(--text-secondary);
  padding: 8px 0;
  font-weight: 500;
}

.calendar-grid {
  display: flex;
  flex-direction: column;
  gap: 1px;
}

.calendar-week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 1px;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--card-background);
  border-radius: 4px;
  position: relative;
  cursor: pointer;
}

.calendar-day.empty {
  background: transparent;
}

.calendar-day.today {
  background: var(--primary-light);
  color: white;
}

.calendar-day.has-checkin {
  background: var(--primary-color);
  color: white;
}

.calendar-day:active {
  transform: scale(0.95);
}

.day-number {
  font-size: 14px;
  font-weight: 500;
}

.checkin-dot {
  width: 4px;
  height: 4px;
  background: white;
  border-radius: 50%;
  position: absolute;
  bottom: 4px;
}

/* 日历图例 */
.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid var(--border-color);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.legend-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.legend-dot.completed {
  background: var(--primary-color);
}

.legend-dot.today {
  background: var(--primary-light);
}

.legend-text {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 打卡弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.checkin-modal {
  background: var(--card-background);
  border-radius: var(--radius);
  width: 90%;
  max-width: 400px;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px var(--spacing);
  border-bottom: 1px solid var(--border-color);
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: var(--text-light);
  cursor: pointer;
}

.modal-close:active {
  background: var(--background-color);
  border-radius: 50%;
}

.modal-content {
  padding: var(--spacing);
  max-height: 300px;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 20px;
}

.form-label {
  font-size: 14px;
  color: var(--text-primary);
  margin-bottom: 8px;
  font-weight: 500;
}

.form-textarea {
  width: 100%;
  min-height: 80px;
  padding: 12px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  font-size: 16px;
  color: var(--text-primary);
  background: var(--card-background);
  resize: none;
}

.form-textarea::placeholder {
  color: var(--text-light);
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120px;
  border: 2px dashed var(--border-color);
  border-radius: var(--radius);
  background: var(--background-color);
  cursor: pointer;
}

.image-upload:active {
  border-color: var(--primary-color);
  background: rgba(76, 175, 80, 0.05);
}

.upload-icon {
  font-size: 32px;
  margin-bottom: 8px;
}

.upload-text {
  font-size: 14px;
  color: var(--text-secondary);
}

.image-preview {
  position: relative;
  display: inline-block;
}

.preview-image {
  width: 120px;
  height: 120px;
  border-radius: var(--radius);
}

.image-remove {
  position: absolute;
  top: -8px;
  right: -8px;
  width: 24px;
  height: 24px;
  background: #ff4444;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  cursor: pointer;
}

.modal-actions {
  display: flex;
  gap: 12px;
  padding: var(--spacing);
  border-top: 1px solid var(--border-color);
}

.modal-actions .btn {
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .habit-header {
    padding: 16px 12px;
  }
  
  .habit-name {
    font-size: 18px;
  }
  
  .stats-section {
    padding: 12px;
    gap: 8px;
  }
  
  .stat-card {
    padding: 16px 12px;
  }
  
  .stat-number {
    font-size: 24px;
  }
  
  .calendar-section {
    margin: 0 12px 12px;
  }
  
  .day-number {
    font-size: 12px;
  }
}
