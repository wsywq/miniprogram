/* pages/index/index.wxss - 首页样式 */

.container {
  padding: 0;
  background: var(--background-color);
  min-height: 100vh;
}

/* 头部区域 */
.header-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 20px var(--spacing);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-greeting {
  flex: 1;
}

.greeting-text {
  display: block;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 4px;
}

.date-text {
  font-size: 14px;
  opacity: 0.9;
}

.user-points {
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8px 16px;
  border-radius: var(--radius);
}

.points-label {
  display: block;
  font-size: 12px;
  opacity: 0.8;
}

.points-value {
  display: block;
  font-size: 18px;
  font-weight: 600;
  margin-top: 2px;
}

/* 今日概览 */
.today-overview {
  margin: var(--spacing);
  margin-bottom: 0;
}

.overview-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 12px;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 24px;
  font-weight: 600;
  color: var(--primary-color);
}

.stat-label {
  font-size: 12px;
  color: var(--text-secondary);
  margin-top: 4px;
}

/* 习惯区域 */
.habits-section {
  padding: var(--spacing);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing);
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.add-habit-btn {
  width: 32px;
  height: 32px;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 18px;
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
}

.loading-text {
  margin-top: 12px;
  color: var(--text-secondary);
  font-size: 14px;
}

/* 习惯列表 */
.habits-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.habit-card {
  background: var(--card-background);
  border-radius: var(--radius);
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  border-left: 4px solid var(--border-color);
}

.habit-card.completed {
  border-left-color: var(--primary-color);
  background: rgba(76, 175, 80, 0.05);
}

.habit-card:active {
  transform: scale(0.98);
}

.habit-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.habit-icon {
  width: 40px;
  height: 40px;
  background: var(--background-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-right: 12px;
}

.habit-details {
  flex: 1;
}

.habit-name {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 2px;
}

.habit-streak {
  font-size: 12px;
  color: var(--text-secondary);
}

.habit-actions {
  margin-left: 12px;
}

.checkin-btn {
  background: var(--primary-color);
  color: white;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.checkin-btn:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

.completed-badge {
  width: 32px;
  height: 32px;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 16px;
  font-weight: 600;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: var(--spacing);
  background: var(--card-background);
  margin: var(--spacing);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px;
  flex: 1;
  text-decoration: none;
  color: inherit;
}

.action-item:active {
  background: var(--background-color);
  border-radius: var(--radius);
}

.action-icon {
  width: 40px;
  height: 40px;
  background: var(--background-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-bottom: 8px;
}

.action-text {
  font-size: 12px;
  color: var(--text-secondary);
  text-align: center;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60px 20px;
}

.empty-state-icon {
  font-size: 64px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state-text {
  display: block;
  font-size: 18px;
  color: var(--text-primary);
  margin-bottom: 8px;
}

.empty-state-desc {
  display: block;
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-section {
    padding: 16px 12px;
  }
  
  .greeting-text {
    font-size: 18px;
  }
  
  .habits-section {
    padding: 12px;
  }
  
  .habit-card {
    padding: 12px;
  }
  
  .habit-icon {
    width: 36px;
    height: 36px;
    font-size: 18px;
  }
  
  .quick-actions {
    margin: 12px;
    padding: 12px;
  }
}
