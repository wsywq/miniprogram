/* pages/profile/profile.wxss - 个人中心页面样式 */

.container {
  background: var(--background-color);
  min-height: 100vh;
  padding-bottom: 40px;
}

/* 用户信息头部 */
.profile-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: 24px var(--spacing);
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  position: relative;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 16px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 28px;
  font-weight: 600;
  color: white;
}

.edit-icon {
  position: absolute;
  bottom: -2px;
  right: -2px;
  width: 24px;
  height: 24px;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  border: 2px solid white;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 22px;
  font-weight: 600;
  margin-bottom: 4px;
}

.join-info {
  font-size: 14px;
  opacity: 0.9;
}

/* 数据统计 */
.stats-section {
  display: flex;
  background: var(--card-background);
  margin: var(--spacing);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  overflow: hidden;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 20px 16px;
  border-right: 1px solid var(--border-color);
}

.stat-item:last-child {
  border-right: none;
}

.stat-number {
  display: block;
  font-size: 24px;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 设置区域 */
.settings-section {
  padding: 0 var(--spacing);
}

.setting-group {
  background: var(--card-background);
  border-radius: var(--radius);
  margin-bottom: var(--spacing);
  box-shadow: var(--shadow);
  overflow: hidden;
}

.group-title {
  padding: 16px var(--spacing);
  background: var(--background-color);
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px var(--spacing);
  border-bottom: 1px solid var(--border-color);
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: var(--background-color);
}

.setting-info {
  flex: 1;
}

.setting-name {
  display: block;
  font-size: 16px;
  color: var(--text-primary);
  margin-bottom: 2px;
}

.setting-desc {
  font-size: 12px;
  color: var(--text-secondary);
  line-height: 1.4;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 8px;
}

.value-text {
  font-size: 14px;
  color: var(--text-secondary);
}

.arrow {
  font-size: 14px;
  color: var(--text-light);
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 分享区域 */
.share-section {
  padding: 0 var(--spacing);
  margin-bottom: var(--spacing);
}

/* 退出登录 */
.logout-section {
  padding: 0 var(--spacing);
  margin-bottom: 20px;
}

.logout-btn {
  color: #f44336;
  border-color: #f44336;
}

.logout-btn:active {
  background: rgba(244, 67, 54, 0.1);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 20px 0;
}

.version-text {
  font-size: 12px;
  color: var(--text-light);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .profile-header {
    padding: 20px 12px;
  }
  
  .user-avatar {
    width: 60px;
    height: 60px;
  }
  
  .avatar-placeholder {
    font-size: 24px;
  }
  
  .user-name {
    font-size: 20px;
  }
  
  .stats-section {
    margin: 12px;
  }
  
  .stat-item {
    padding: 16px 12px;
  }
  
  .stat-number {
    font-size: 20px;
  }
  
  .settings-section {
    padding: 0 12px;
  }
  
  .setting-group {
    margin-bottom: 12px;
  }
  
  .setting-item {
    padding: 12px;
  }
  
  .group-title {
    padding: 12px;
  }
  
  .share-section,
  .logout-section {
    padding: 0 12px;
  }
}
